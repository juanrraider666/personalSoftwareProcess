<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Vista.tabbed">




    <TextView
        android:id="@+id/textView11"
        style="@style/letras"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THAME IN PHASE" />


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="114dp"
            android:layout_height="55dp"
            android:textColorHint="@color/colorLetras"
            app:counterMaxLength="10">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtnombreproyect"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:hint="Proyecto"
                android:textColor="@color/colorLetras" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="133dp"
            android:layout_height="55dp"
            android:textColorHint="@color/colorLetras"
            app:counterMaxLength="10">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txttiempoproyect"
                android:layout_width="121dp"
                android:layout_height="42dp"
                android:hint="Tiempo"
                android:textColor="@color/colorLetras" />


        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ColorCard"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">


            <Button
                android:id="@+id/btnregistrartime"
                android:layout_width="57dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:text="Echo"
                android:textColor="@color/ColorSubtitulo" />
        </android.support.v7.widget.CardView>


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/white" />
    </FrameLayout>



</LinearLayout>